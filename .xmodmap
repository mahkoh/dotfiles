! disable capslock and set 'capslock <-> esc'
clear Lock
keycode 66 = Escape
keycode 9 = Caps_Lock

! disable altgr and set 'altgr -> third level'
remove mod1 = Alt_R
keycode 108 = ISO_Level3_Shift

! set the key right of the left shift to $ for latex
keycode 94 = dollar

! right windows key -> left shift key
keycode 135 = Shift_L

! add umlaute to the third level of dvorak
keysym a = a A a A adiaeresis Adiaeresis
keysym o = o O o O odiaeresis Odiaeresis
keysym u = u U u U udiaeresis Udiaeresis
keysym s = s S s S ssharp section

! no multimedia keys? change printscr, scrollock, etc.
keycode 78 = XF86AudioPlay
keycode 107 = XF86AudioPrev
keycode 127 = XF86AudioNext
